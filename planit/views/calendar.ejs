<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kalendarz zadań</title>

    <!-- FullCalendar CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css"
      rel="stylesheet"
    />

    <!-- Bootstrap CSS -->
    <link
      href="node_modules/bootstrap/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <style>
      body {
        background-color: #f8f9fa;
      }

      #calendar-container {
        max-width: 1100px;
        margin: 50px auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .fc-toolbar-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
      }

      .fc-button {
        background-color: #007bff !important;
        border-color: #007bff !important;
        color: white !important;
        transition: all 0.3s ease;
      }

      .fc-button:hover {
        background-color: #0056b3 !important;
        border-color: #0056b3 !important;
      }

      .fc-daygrid-event {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding: 2px 4px;
        font-size: 0.85rem;
        background-color: #6ea8fe;
        border-color: #6ea8fe;
        color: white;
      }

      .fc-daygrid-event:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      .fc-daygrid-day-number {
        font-weight: bold;
        color: #007bff;
      }
    </style>
  </head>
  <body>
    <h1 class="text-center my-4">Kalendarz zadań</h1>

    <div id="calendar-container">
      <div id="calendar"></div>
    </div>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const calendarEl = document.getElementById("calendar");

        // Inicjalizacja FullCalendar
        const calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: "dayGridMonth",
          headerToolbar: {
            left: "prev,next today",
            center: "title",
            right: "dayGridMonth,timeGridWeek,timeGridDay",
          },
          events: "/api/tasks/calendar",
          navLinks: true,
          selectable: true,
          editable: false,
          eventContent: function (arg) {
            const title = document.createElement("div");
            title.textContent = arg.event.title; // Wyświetl tylko tytuł zadania
            return { domNodes: [title] };
          },
          eventDidMount: function (info) {
            const tooltip = new bootstrap.Tooltip(info.el, {
              title: info.event.title,
              placement: "top",
              trigger: "hover",
            });
          },
        });

        calendar.render();
      });

      function showTaskDetailsAndRightSidebar(taskId) {
        alert("Szczegóły zadania ID: " + taskId);
      }
    </script>
  </body>
</html>
