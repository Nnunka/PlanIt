<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlanIt</title>
    <link
      rel="stylesheet"
      href="node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <style>
      /* Stylizacja lewego sidebar */
      .sidebar-left {
        width: 15%;
        height: 100vh;
        background-color: #f8f9fa;
        position: fixed;
        top: 56px; /* Wysokość navbaru */
        left: 0;
        padding-top: 1rem;
        padding-left: 1rem;
      }

      /* Stylizacja prawego sidebar */
      .sidebar-right {
        width: 0;
        height: 100vh;
        background-color: #f8f9fa;
        position: fixed;
        top: 56px; /* Wysokość navbaru */
        right: 0;
        overflow-x: hidden;
        transition: width 0.3s ease;
      }

      /* Wyświetlanie prawego sidebar po rozszerzeniu */
      .sidebar-right.active {
        width: 25%; /* Docelowa szerokość po aktywacji */
      }

      /* Stylizacja zawartości prawego sidebar */
      .sidebar-content {
        opacity: 1;
        transition: opacity 0.3s ease;
      }

      /* Ukrywanie zawartości prawego sidebar, gdy jest zamknięty */
      .sidebar-right:not(.active) .sidebar-content {
        opacity: 0;
        pointer-events: none; /* Zapobiega interakcji z niewidoczną zawartością */
        transition: opacity 0.3s ease; /* Opóźnienie przy zamykaniu */
      }

      /* Dopasowanie treści głównej */
      .content {
        margin-left: 15%; /* Przesunięcie treści o szerokość lewego sidebar */
        padding: 1rem;
        margin-top: 56px; /* Wysokość navbaru */
        transition: margin-right 0.3s ease;
      }

      /* Przesunięcie treści w lewo przy aktywnym prawym sidebar */
      .content.shifted-right {
        margin-right: 25%; /* Przesunięcie o szerokość prawego sidebar */
      }
    </style>
  </head>

  <body>
    <!-- Nawigacja główna -->
    <nav
      class="navbar navbar-light"
      style="background-color: #e3f2fd; padding: 0.5rem 1.5rem"
    >
      <a class="navbar-brand" style="font-weight: bold; font-size: 1.25rem"
        >PlanIt</a
      >
      <span class="navbar-text" style="font-size: 1rem">
        Witaj, w PlanIt <b><%= user.login %></b>!
      </span>
      <button id="logout-button" class="btn btn-outline-danger btn-sm">
        Wyloguj się
      </button>
    </nav>

    <!-- Lewy Sidebar -->
    <div class="sidebar-left">
      <h4>Menu Lewy</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="#">Link 1</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link 2</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link 3</a>
        </li>
      </ul>
    </div>

    <!-- Prawy Sidebar -->
    <div id="rightSidebar" class="sidebar-right">
      <div class="sidebar-content">
        <h4>Menu Prawy</h4>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="#">Link A</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link B</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link C</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Główna zawartość strony -->
    <div id="mainContent" class="content">
      <div class="container mt-4">
        <h1>Witamy w PlanIt!</h1>
        <p>Tutaj będzie zawartość strony głównej.</p>
        <!-- Przycisk do otwierania prawego sidebar w głównej zawartości -->
        <button class="btn btn-primary mt-3" onclick="toggleRightSidebar()">
          ☰ Otwórz Prawy Sidebar
        </button>
      </div>
    </div>

    <script>
      function toggleRightSidebar() {
        const rightSidebar = document.getElementById("rightSidebar");
        const content = document.getElementById("mainContent");

        // Przełącz aktywację prawego sidebar i przesunięcie treści
        rightSidebar.classList.toggle("active");
        content.classList.toggle("shifted-right");
      }
    </script>

    <script src="/js/logout.js"></script>
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
