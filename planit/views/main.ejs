<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlanIt</title>
    <link
      rel="stylesheet"
      href="node_modules/bootstrap/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/rightSidebar.css" />
    <link rel="stylesheet" href="/css/leftSidebar.css" />
  </head>

  <body>
    <!--navbar-->
    <%-include('partials/navbar.ejs')%>

    <!--left sidebar-->
    <div
      id="sidebar-left"
      class="sidebar-left shadow-sm"
      style="background-color: #f5f5f5"
    >
      <h4>Grupy zadań</h4>
      <ul id="task-groups-list" class="nav flex-column">
        <li class="nav-item">
          <!-- Dodajemy id do linku -->
          <a class="nav-link" href="#" id="all-tasks-link">Wszystkie zadania</a>
        </li>
      </ul>
    </div>

    <!--right sidebar-->
    <%-include('partials/rightSidebar.ejs')%>

    <!--main content-->
    <div id="main-content" class="content">
      <div class="container mt-4">
        <h2>Twoja lista zadań</h2>
        <div id="task-list" class="mt-3"></div>

        <div id="add-task-form" class="task-item">
          <form
            onsubmit="addTask(event)"
            class="d-flex align-items-center w-100"
          >
            <div class="form-group flex-grow-1 me-2 mb-0">
              <input
                type="text"
                id="new-task-name"
                class="form-control"
                placeholder="Wpisz nazwę dla nowego zadania"
                autocomplete="off"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
          </form>
        </div>
      </div>
    </div>

    <!--modal do potwierdzenia usunięcia zadania-->
    <%-include('partials/deleteTaskModal.ejs')%>
    <%-include('partials/addTaskGroupModal')%>

    <script>
      async function loadTaskGroups() {
        try {
          const response = await fetch("/tasks/groups");
          const groups = await response.json();

          const taskGroupsList = document.getElementById("task-groups-list");
          taskGroupsList.innerHTML = ""; // Wyczyść listę przed dodaniem nowych grup

          // Dodaj link do wszystkich zadań na początku
          const allTasksLink = document.createElement("li");
          allTasksLink.classList.add("nav-item");
          const allTasksAnchor = document.createElement("a");
          allTasksAnchor.classList.add("nav-link");
          allTasksAnchor.href = "#";
          allTasksAnchor.textContent = "Wszystkie zadania";

          allTasksAnchor.onclick = (event) => {
            event.preventDefault();
            currentGroup = null; // Resetuje filtr grupy
            showTasks(); // Wyświetla wszystkie zadania
          };

          allTasksLink.appendChild(allTasksAnchor);
          taskGroupsList.appendChild(allTasksLink);

          // Dodaj poszczególne grupy zadań do listy
          groups.forEach((group) => {
            const listItem = document.createElement("li");
            listItem.classList.add("nav-item");

            const link = document.createElement("a");
            link.classList.add("nav-link");
            link.href = "#";
            link.textContent = group;

            link.onclick = (event) => {
              event.preventDefault();
              currentGroup = group; // Ustawiamy `currentGroup` na nazwę klikniętej grupy
              showTasks(group); // Wywołanie `showTasks` z nazwą grupy
            };

            listItem.appendChild(link);
            taskGroupsList.appendChild(listItem);
          });
        } catch (error) {
          console.error("Błąd pobierania grup zadań:", error);
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        showTasks(); // Wyświetla wszystkie zadania na początku
        loadTaskGroups();
      });

      document.getElementById("all-tasks-link").onclick = (event) => {
        event.preventDefault();
        currentGroup = null; // Resetujemy grupę na `null`, aby pokazać wszystkie zadania
        showTasks(); // Wywołaj `showTasks` bez argumentów, aby wyświetlić wszystkie zadania
      };
    </script>

    <script src="/js/logout.js"></script>
    <script src="/js/tasks.js"></script>
    <script src="/js/rightSidebar.js"></script>
    <script src="/js/taskGroupRightSidebar.js"></script>

    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
