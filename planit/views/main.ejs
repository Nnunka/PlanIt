<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlanIt</title>
    <link
      rel="stylesheet"
      href="node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body>
    <!-- Nawigacja główna -->
    <nav
      class="navbar navbar-light"
      style="background-color: #e3f2fd; padding: 0.5rem 1.5rem"
    >
      <a class="navbar-brand" style="font-weight: bold; font-size: 1.25rem"
        >PlanIt</a
      >
      <span class="navbar-text" style="font-size: 1rem">
        Witaj, w PlanIt <b><%= user.login %></b>!
      </span>
      <button id="logout-button" class="btn btn-outline-danger btn-sm">
        Wyloguj się
      </button>
    </nav>

    <!-- Lewy Sidebar -->
    <div class="sidebar-left">
      <h4>Menu Lewy</h4>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="#">Link 1</a>
        </li>
      </ul>
    </div>

    <!-- Prawy Sidebar -->
    <div id="rightSidebar" class="sidebar-right">
      <div class="sidebar-content">
        <h4>Szczegóły zadania</h4>
        <div id="task-details">
          <p><strong>Nazwa:</strong> <span id="task-name"></span></p>
          <p><strong>Opis:</strong> <span id="task-more"></span></p>
          <p><strong>Grupa:</strong> <span id="task-group"></span></p>
          <p>
            <strong>Godzina zakończenia:</strong>
            <span id="task-end-time"></span>
          </p>
          <p>
            <strong>Data zakończenia:</strong> <span id="task-end-date"></span>
          </p>
        </div>
      </div>
    </div>

    <!-- Główna zawartość strony -->
    <div id="mainContent" class="content">
      <div class="container mt-4">
        <h2>Twoja lista zadań</h2>
        <div id="task-list" class="mt-3"></div>
      </div>
    </div>

    <script>
      async function fetchTasks() {
        try {
          const response = await fetch("/tasks");
          const data = await response.json();
          const tasks = data.tasks;
          const taskList = document.getElementById("task-list");
          taskList.innerHTML = ""; // Wyczyść kontener przed dodaniem zadań
          tasks.forEach((task) => {
            const taskItem = document.createElement("div");
            taskItem.classList.add("task-item");
            taskItem.innerHTML = `${task.task_name}`;

            taskItem.onclick = () =>
              fetchTaskDetailsAndShowSidebar(task.task_id);

            taskList.appendChild(taskItem);
          });
        } catch (error) {
          console.error("Błąd pobierania zadań:", error);
        }
      }
      document.addEventListener("DOMContentLoaded", fetchTasks);

      async function fetchTaskDetailsAndShowSidebar(taskId) {
        try {
          const response = await fetch(`/task/${taskId}`);
          const data = await response.json();

          // Update the sidebar with task details
          document.getElementById("task-name").innerText = data.task_name;
          document.getElementById("task-more").innerText =
            data.task_more || "Brak opisu";
          document.getElementById("task-group").innerText =
            data.task_group || "Brak grupy";
          document.getElementById("task-end-time").innerText =
            data.task_end_time || "Brak";
          document.getElementById("task-end-date").innerText =
            data.task_end_date || "Brak";

          toggleRightSidebar();
        } catch (error) {
          console.error("Błąd pobierania szczegółów zadania:", error);
        }
      }

      document.addEventListener("DOMContentLoaded", fetchTaskDetails);

      function toggleRightSidebar(taskId) {
        const rightSidebar = document.getElementById("rightSidebar");
        const content = document.getElementById("mainContent");

        // Przełącz aktywację prawego sidebar i przesunięcie treści
        rightSidebar.classList.toggle("active");
        content.classList.toggle("shifted-right");
      }
    </script>

    <script src="/js/logout.js"></script>
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
