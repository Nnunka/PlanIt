<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PlanIt</title>
    <link
      rel="stylesheet"
      href="node_modules/bootstrap/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/rightSidebar.css" />
    <link rel="stylesheet" href="/css/leftSidebar.css" />
  </head>

  <body>
    <!--navbar-->
    <%-include('partials/navbar.ejs')%>

    <!--left sidebar-->
    <!-- Left Sidebar -->
    <div
      id="sidebar-left"
      class="sidebar-left shadow-sm"
      style="background-color: #f5f5f5"
    >
      <h4>Grupy zadań</h4>
      <ul id="task-groups-list" class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="showTasks()"
            >Wszystkie zadania</a
          >
        </li>
      </ul>
    </div>

    <!--right sidebar-->
    <%-include('partials/rightSidebar.ejs')%>

    <!--main content-->
    <div id="main-content" class="content">
      <div class="container mt-4">
        <h2>Twoja lista zadań</h2>
        <div id="task-list" class="mt-3"></div>

        <div id="add-task-form" class="task-item">
          <form
            onsubmit="addTask(event)"
            class="d-flex align-items-center w-100"
          >
            <div class="form-group flex-grow-1 me-2 mb-0">
              <input
                type="text"
                id="new-task-name"
                class="form-control"
                placeholder="Wpisz nazwę dla nowego zadania"
                autocomplete="off"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
          </form>
        </div>
      </div>
    </div>

    <!--modal do potwierdzenia usunięcia zadania-->
    <%-include('partials/deleteTaskModal.ejs')%>
    <%-include('partials/addTaskGroupModal')%>

    <script>
      async function loadTaskGroups() {
        try {
          const response = await fetch("/tasks/groups");
          const groups = await response.json();

          const taskGroupsList = document.getElementById("task-groups-list");
          taskGroupsList.innerHTML = ""; // Wyczyść listę przed dodaniem nowych grup

          // Dodaj opcję "Wszystkie zadania" na początku
          const allTasksItem = document.createElement("li");
          allTasksItem.classList.add("nav-item");
          const allTasksLink = document.createElement("a");
          allTasksLink.classList.add("nav-link");
          allTasksLink.href = "#";
          allTasksLink.textContent = "Wszystkie zadania";
          allTasksLink.onclick = () => showTasks(); // Wyświetl wszystkie zadania
          allTasksItem.appendChild(allTasksLink);
          taskGroupsList.appendChild(allTasksItem);

          groups.forEach((group) => {
            const listItem = document.createElement("li");
            listItem.classList.add("nav-item");

            const link = document.createElement("a");
            link.classList.add("nav-link");
            link.href = "#";
            link.textContent = group;

            // Kliknięcie na grupę wywołuje filtrowanie zadań
            link.onclick = () => showTasks(group);

            listItem.appendChild(link);
            taskGroupsList.appendChild(listItem);
          });

          console.log("Sidebar odświeżony z nowymi grupami:", groups);
        } catch (error) {
          console.error("Błąd pobierania grup zadań:", error);
        }
      }

      // Wywołaj odświeżenie grup sidebaru po załadowaniu dokumentu
      document.addEventListener("DOMContentLoaded", loadTaskGroups);
    </script>

    <script src="/js/logout.js"></script>
    <script src="/js/tasks.js"></script>
    <script src="/js/rightSidebar.js"></script>
    <script src="/js/taskGroupRightSidebar.js"></script>

    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
