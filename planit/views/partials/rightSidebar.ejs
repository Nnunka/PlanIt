<div
  id="sidebar-right"
  class="sidebar-right shadow-sm"
  style="background-color: #f5f5f5"
>
  <div class="sidebar-right-content">
    <h5>Szczegóły zadania</h5>

    <form id="task-details-form">
      <div class="form-group">
        <label for="task-name"><strong>Nazwa:</strong></label>
        <input id="task-name" class="form-control" type="text" disabled />
      </div>

      <div class="form-group">
        <label for="task-more"><strong>Opis:</strong></label>
        <textarea id="task-more" class="form-control" disabled></textarea>
      </div>

      <div class="form-group">
        <label for="task-group"><strong>Grupa:</strong></label>
        <select id="task-group" class="form-control" disabled></select>
      </div>

      <div class="form-group">
        <label for="task-end-time"><strong>Godzina:</strong></label>
        <input id="task-end-time" class="form-control" type="time" disabled />
      </div>

      <div class="form-group">
        <label for="task-end-date"><strong>Termin:</strong></label>
        <input id="task-end-date" class="form-control" type="date" disabled />
      </div>

      <button
        type="button"
        id="edit-button"
        class="btn btn-primary"
        onclick="editTask()"
      >
        Edytuj
      </button>

      <button
        type="button"
        id="save-button"
        class="btn btn-success"
        style="display: none"
        onclick="saveTask()"
      >
        Zapisz
      </button>

      <button
        type="button"
        id="delete-button"
        class="btn btn-outline-danger mt-3"
        onclick="deleteTask()"
      >
        Usuń
      </button>
    </form>

    <!-- Sekcja Załączników -->
    <div class="mt-4">
      <h5>Załączniki</h5>
      <ul id="file-list" class="section-list">
        <!-- Elementy listy załączników będą dodawane dynamicznie -->
      </ul>
      <form id="file-upload-form" class="d-flex align-items-center">
        <input type="file" id="file-input" class="form-control" required />
        <button type="submit" class="btn btn-primary">Prześlij</button>
      </form>
    </div>

    <!-- Sekcja Podzadań -->
    <div class="subtasks-section mt-4">
      <h5>Podzadania</h5>
      <ul id="subtasks-list" class="section-list">
        <!-- Elementy listy podzadań będą dodawane dynamicznie -->
      </ul>
      <form id="add-subtask-form" class="d-flex align-items-center">
        <input
          type="text"
          id="new-subtask-name"
          class="form-control"
          placeholder="Dodaj nowe podzadanie"
          required
        />
        <button type="submit" class="btn btn-primary">Dodaj</button>
      </form>
    </div>
  </div>
</div>
