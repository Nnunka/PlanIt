<div
  id="sidebar-right"
  class="sidebar-right shadow-sm"
  style="background-color: #f5f5f5"
>
  <div class="sidebar-right-content">
    <h5>Szczegóły zadania</h5>

    <form id="task-details-form">
      <div class="form-group">
        <label for="task-name"><strong>Nazwa:</strong></label>
        <input id="task-name" class="form-control" type="text" disabled />
      </div>

      <div class="form-group">
        <label for="task-more"><strong>Opis:</strong></label>
        <textarea id="task-more" class="form-control" disabled></textarea>
      </div>

      <div class="form-group">
        <label for="task-group"><strong>Grupa:</strong></label>
        <select id="task-group" class="form-control" disabled></select>
      </div>

      <div class="form-group">
        <label for="task-end-time"><strong>Godzina:</strong></label>
        <input id="task-end-time" class="form-control" type="time" disabled />
      </div>

      <div class="form-group">
        <label for="task-end-date"><strong>Termin:</strong></label>
        <input id="task-end-date" class="form-control" type="date" disabled />
      </div>

      <button
        type="button"
        id="edit-button"
        class="btn btn-primary"
        onclick="editTask()"
      >
        Edytuj
      </button>

      <button
        type="button"
        id="save-button"
        class="btn btn-success"
        style="display: none"
        onclick="saveTask()"
      >
        Zapisz
      </button>

      <button
        type="button"
        id="delete-button"
        class="btn btn-outline-danger mt-3"
        onclick="deleteTask()"
      >
        Usuń
      </button>
    </form>

    <div class="mt-4">
      <h5>Załączniki</h5>
      <ul id="file-list" class="list-group mb-3">
        <!-- Files will be dynamically populated here -->
      </ul>

      <form id="file-upload-form" enctype="multipart/form-data">
        <input type="file" id="file-input" class="form-control mb-2" />
        <button type="submit" class="btn btn-primary btn-sm">
          Prześlij plik
        </button>
      </form>
    </div>

    <!-- Sekcja dla podzadań -->
    <div class="subtasks-section mt-4">
      <h5>Podzadania</h5>
      <div id="subtasks-list" class="mb-3">
        <!-- Lista podzadań generowana dynamicznie -->
      </div>
      <form id="add-subtask-form">
        <div class="input-group">
          <input
            type="text"
            id="new-subtask-name"
            class="form-control"
            placeholder="Dodaj nowe podzadanie"
            required
          />
          <button class="btn btn-primary" type="submit">Dodaj</button>
        </div>
      </form>
    </div>
    <!-- Koniec sekcji podzadań -->
  </div>
</div>
